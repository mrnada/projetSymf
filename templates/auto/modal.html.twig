<!-- The Modal -->
<div class="modal" id="myModal{{voiture.id}}">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Voiture {{voiture.id}}</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <img src="{{voiture.image}}" style="max-width: 100px" alt="">
        </div>
            <div class="col-md-6">
                <ul>
                    <li>{{voiture.marque}} </li><br>
                    <li>{{voiture.modele}} </li><br>
                    <li>{{voiture.pays}} </li><br>
                </ul>
            </div>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
</div>